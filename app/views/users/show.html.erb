<h1><%= @user.name %>'s Stats</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Game Name</th>
      <th scope="col">Date Played</th>
      <th scope="col">Won?</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <th scope="row"><%= game.name %></th>
      <td><% game.matches.each do |match| %>
		      <%= match.match_date %><br>
		      <% end %>
      </td>

      <td><% game.matches.each do |match| %>
           <%= win_column(match) %><br>
        <% end %>
      </td>

		




    </tr>
    <% end %>
  </tbody>
</table>









<br>
<br>
<% if current_user_page(current_user) %>
  <% if current_user.matches.count >= 1  %>
    <p>Your favorite game is <%= @fav %>. 
  <% end %>
<% end %>

<h3><%= current_user_page(current_user) %></h3>
